.graph{
  padding: 0px 60px;
}
/* 棒グラフの枠組み */
.graph-main {
  display: flex;
  align-items: flex-end;
  height: 200px;
  max-width: 303px;
  margin: 0 auto;
  border-left: 3px solid rgb(218,220,224);
}

/* 棒 */
.graph-main .bar {
  width: 19px;
  margin: 0 0.5px;
  
  /* background: rgb(26,115,232); */
  /* 丸角 */
  border-radius: 4px 4px 0 0;
}

.graph-axis-padding {
  display: flex;
  width: 300px;
  height: 10px;
  margin: 0 auto;
}

.graph-axis-padding .padding {
  width: 60px;
  border-left: 3px solid rgb(218,220,224);
  border-top: 3px solid rgb(218,220,224);
  /* border-style: solid none none none; */
}

.graph-axis {
  display: flex;
  width: 300px;
  height: 50px;

  margin: 0 auto;
  /* width: 50px; */
  /* background-color: grey; */
}

.graph-axis .axis{
  width: 60px;
  text-align: center;
}

.graph-axis .axis18{
  margin-left: 30px;
}

.graph-axis .axis21{
  margin-right: 30px;
}

.graph-wrap{
  display: flex;
  flex-direction: column;
}

.graph-wrap-graph{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.graph-wrap-today{
  display: flex;
  flex-direction: column;
}

.simplemenu{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.simplemenu p{
  font-size: 20px;
  margin: 20px;
}

.hidden_graph{
  display: none;
}
@media screen and (max-width:660px){
  .graph{
    padding: 0;
  }
  .graph-wrap-graph{
    flex-direction: column;
  }
  .graph-wrap-average{
    display: none;
  }
  .hidden_graph {
    margin: 2em 0;
    padding: 0;
    display: block;
  }

  .hidden_graph label {
    padding: 15px;
    width: 220px;
    font-size: 13px;
    border: 1px solid;
    display: inline-block;
    background-color: #a4fff2;
    border-color: white;
    color: white;
    cursor: pointer;
  }

  .hidden_graph input {
      display: none;
  }

  .hidden_graph .hidden_show {
      height: 0;
      padding: 0;
      overflow: hidden;
      opacity: 0;
      transition: 0.8s;
  }

  .hidden_graph input:checked ~ .hidden_show {
      padding: 10px 0;
      height: auto;
      opacity: 1;
  }

}
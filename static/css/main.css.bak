/* ラジオボタンの設定（装飾とか） */
.container {
  display: inline-block;
  justify-content: center;
  box-sizing: border-box;
}
.menu-label {
  position: relative;
  min-width: 10%;
  margin: 10px;
}
.menu-label input[type=radio].menu-input {
  display: none;
}
.menu-label .menu-text {
  position: relative;
  display: block;
  padding-left: 35px;
  cursor: pointer;
}

.menu-label .menu-text:before {
  content: "";
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  display: block;
  margin: auto;
  width: 24px;
  height: 24px;
}
.menu-label input[type=radio].menu-input:checked + .menu-text:after {
  content: "";
  position: absolute;
  top: 0;
  bottom: 0;
  left: 5px;
  display: block;
  margin: auto;
}
.menu-label .menu-text.round:before {
  border: 1px solid #ddd;
  border-radius: 40px;
}
.menu-label input[type=radio].menu-input:checked + .menu-text.round:after {
  width: 16px;
  height: 16px;
  background-color: #4abdac;
  border-radius: 40px;
}



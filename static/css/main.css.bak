/* common */
body{ 
  background-color:#F4F5F7;
  margin: 0px;
  text-align: center;
}
/* base */
.header{
  display: flex;
  flex-direction: column;
  padding: 0.5rem;
  background-color:#F4F5F7;
}
.nav1 a , .nav2 a{
  text-decoration: none;
  color: black;
}
/* ロゴ、ログイン・新規登録の配置 */
.nav1{
  display: flex;
  justify-content: space-between;
  padding: 0.5rem;
}
/* ロゴの設定 */
.logo{
  font-size: 80px;
  width: 200px;
  height: 50px;
  line-height: 60px;
  text-align: center;
  margin-left: 50px;
  font-family: 'Vollkorn',serif;
  text-shadow: 1px 2px 3px #808080;
  font-weight: bold;
}
.logo :hover{
  opacity: 0.7 ;
}
/* ログインと新規登録、トップ・寮食予約・寮食感想・お風呂状況の設定 */
.nav1 ul , .nav2 ul{
  display: flex;
  list-style: none;
  justify-content: center;
}
.nav1 li{
  width: 100px;
  text-align: center;
  font-size: 18px;
  margin-right: 20px;
  line-height: 10px;
}
.nav2 li{
  width: 300px;
  text-align: center;
  font-size: 20px;
  justify-content: space-around;
}
.nav1 li a , .nav2 li a {
  padding:10px 10px 5px 10px;
  position: relative;
}
.nav1 li a::before , .nav2 li a::before{
  background: #ff701e;
  content: '';
  width: 100%;
  height: 2px;
  position: absolute;
  left: 0;
  bottom: 0;
  margin: auto;
  transform-origin: right top;
  transform: scale(0, 1);
  transition: transform .3s;
}
.nav1 li a:hover::before , .nav2 li a:hover::before{
  transform-origin: left top;
  transform: scale(1, 1);
}

/* login */
.elementstyle {
  font-family: sans-serif;
  margin: 60px auto 60px auto;
  color: rgb(39, 39, 40);
  background-color: rgb(244, 244, 244);
  border: 1px solid #555; 
  max-width: 365px;
}

input[type="text"] , input[type="password"]{
  width: 220px;
  padding: 5px;
  font-size: 1px;     
} 

input[type="submit"] , form input[type="reset"]{
  padding-top: 3px;
  padding-bottom: 3px;
  margin-bottom: 20px;
  margin-top: 45px;
  width: 220px;
  font-size: 13px;
  border: 1px solid;
  display: inline-block;
  background-color: rgb(21 210 0 / 68%); /* 背景色 */
  border-color: white;
  color: white;
  cursor: pointer;
  text-decoration: none; /* 文字の下線を消す */
} 


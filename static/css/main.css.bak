  background-color:#F4F5F7;
  margin: 0px;
  text-align: center;
}
/* base */
header a , .selectmonth a{
  text-decoration: none;
  color: black;
}
header{
  display: flex;
  flex-direction: column;
  padding: 0.5rem;
  background-color:#F4F5F7;
}
.topmenu{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.topmenu1{
  justify-content: space-evenly;
  list-style: none;
  margin: 16px 20px 0px 0px;
  text-align: right;
}
#logo{
  font-size: 80px;
  height: 50px;
  line-height: 30px;
  margin-left: 80px;
  text-align: left;
  font-family: 'Vollkorn',serif;
  text-shadow: 1px 2px 3px #808080;
  font-weight: bold;
  position: relative;
  top: 20px;
}
#logo :hover{
  opacity: 0.7 ;
}
/* ログインと新規登録、トップ・寮食予約・寮食感想・お風呂状況の設定 */
.topmenu2{
  display: flex;
  list-style: none;
  justify-content: center;
  padding: 0;
}
.topmenu1 li{
  width: 100px;
  text-align: right;
  font-size: 18px;
  line-height: 20px;
  display: inline-block;
  position: relative;
}
#accordion-menu{
  margin-top: 16px;
}
.topmenu2 li{
  width: 300px;
  text-align: center;
  font-size: 20px;
  justify-content: space-around;
}
.topmenu1 li a , .topmenu2 li a , .selectmonth li a{
  padding:10px 10px 5px 10px;
  position: relative;
}
.topmenu1 li a::before , .topmenu2 li a::before , .selectmonth li a::before{
  background: #ff701e;
  content: '';
  width: 100%;
  height: 2px;
  position: absolute;
  left: 0;
  bottom: 0;
  margin: auto;
  transform-origin: right top;
  transform: scale(0, 1);
  transition: transform .5s;
}
.topmenu1 li a:hover::before , .topmenu2 li a:hover::before , .selectmonth li a:hover::before{
  transform-origin: left top;
  transform: scale(1, 1);
}
#open{
  display: none;
}

@media screen and (max-width:1100px){
  #logo{
    margin-left: 20px;
  }
}
@media screen and (max-width:520px){
  header{
    flex-direction: row;
    align-items: center;
  }
  #logo{
    font-size: 40px;
  }
  #logo :hover{
    opacity: 1.0 ;
  }
  #logo :active{
    opacity: 0.7 ;
    transition: .2s;
  }
  .topmenu1{
    display: flex;
    flex-direction: column;
    text-align: center;
    margin: 16px 0px;
    padding-left: 10px;
  }
  .topmenu1 li{
    margin: 3px;
    width: 72px;
  }
  .topmenu1 li a{
    padding: 0px;
  }
  .topmenu2{
    display: block;
  }
  .topmenu2 li{
    margin: 10px;
    border-bottom: 1px rgba(255,255,255,1) solid;
    width: 200px;
  }
  #top{
    padding: 10px 70px 0px 70px;
  }
  #order , #feeling{
    padding: 10px 60px 0px 60px;
  }
  #bath{
    padding: 10px 30px 0px 30px;
  }
  .topmenu1 li a::before , .topmenu2 li a::before{
    display: none;
  }
  .topmenu1 li a:hover::before , .topmenu2 li a:hover::before{
    display: none;
  }
  .topmenu1 li a:active , .topmenu2 li a:active{
    background-color: #808080;
  }
  /*** ボタン全体 ***/
  .menu-btn{
    display: flex;
    position: relative; /*線の起点*/
    width: 68px; /*ボタンの幅*/
    height: 68px; /*ボタンの高さ*/
    cursor: pointer; /*クリック可能を伝える*/
    z-index: 100; /*最前面*/
  }
  /*** ボタンの三本線（共通） ***/
  #accordion-menu{
    margin-top: 0px;
  }
  .menu-btn span{
    position: absolute;
    width: 40%; /*線の長さ*/
    height: 4px; /*線の太さ*/
    left: calc(50% - 40% / 2); /*中央から長さの半分を引く*/
    background: #000; /*線の色*/
    transition: .4s;
  }
  /* 順に上・中・下の線 */
  .top-bar{
    top: calc(35% - 2px / 2); /*上から35%の位置*/ 
  }
  .center-bar{
    top: calc(50% - 2px / 2); /*上から50%の位置*/
  }
  .under-bar{
    top: calc(65% - 2px / 2); /*上から65%の位置*/
  }
  /** クリック後(✔が入った後)の線 **/
  /*上の線*/
  #open:checked ~ .menu-btn > .top-bar {
    top: calc(50% - 2px / 2); /*中央*/
    transform: rotate(45deg); /*45度回転*/
  }
  /*中の線*/
  #open:checked ~ .menu-btn > .center-bar{
    opacity: 0;/*真ん中の線は透過*/
  }
  /*下の線*/
  #open:checked ~ .menu-btn > .under-bar{
    top: calc(50% - 2px / 2); /*中央*/
    transform: rotate(-45deg); /*-45度回転*/
  }
  /*** メニュー内容 ***/
  .inner-menu{
    position: fixed; /*画面固定*/
    top: 0;
    left: 0;
    width: 100vw; /*全画面*/
    height: 100vh;
    box-sizing: border-box;
    padding: 80px 60px 0px 80px; /*ボタンと被らない位には*/
    background: rgb(188, 188, 188); /*背景*/
    opacity: 0; /*透明*/
    visibility: hidden; /*標準で非表示*/
    transition: .5s;
    z-index: 99; /*ボタンより背面(小さい値)*/
    overflow-y: scroll; /*スクロール可*/
    text-align: center;
  }
  #open:checked ~ .inner-menu{
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
  }
}


{% extends "./base.html" %}

{% block head %}
  <link rel="stylesheet" href="/static/css/graph.css">
{% endblock %}

{% block body %}
  <h1>トップページ</h1>
  <h2>本日[{{today}}]の寮食</h2>
  {% for time, set, food_name in order_list %}
    <p>{{time}} : 『{{set}}セットの{{food_name}}』を受け取りましょう。</p>
  {% endfor %}

  <!-- グラフの表示 -->
  <h2>本日の推移</h2>
  <div class="graph">
    <div class="graph-main">
      {% for percent, color in today_list %}
        <div class="bar" style="height: {{percent}}%; background: {{color}};"></div>
      {% endfor %}
    </div>
    <div class="graph-axis-padding">
      <div class="padding"></div>
      <div class="padding"></div>
      <div class="padding"></div>
      <div class="padding"></div>
      <div class="padding"></div>
    </div>
    <div class="graph-axis">
      <div class="axis axis18">18</div>
      <div class="axis axis19">19</div>
      <div class="axis axis20">20</div>
      <div class="axis axis21">21</div>
    </div>
  </div>

  <!-- 平均のグラフ -->
  <h2>平日の平均の推移</h2>
  <div class="graph">
    <div class="graph-main">
      {% for percent, color in average_list %}
        <div class="bar" style="height: {{percent}}%; background: {{color}};"></div>
      {% endfor %}
    </div>
    <div class="graph-axis-padding">
      <div class="padding"></div>
      <div class="padding"></div>
      <div class="padding"></div>
      <div class="padding"></div>
      <div class="padding"></div>
    </div>
    <div class="graph-axis">
      <div class="axis axis18">18</div>
      <div class="axis axis19">19</div>
      <div class="axis axis20">20</div>
      <div class="axis axis21">21</div>
    </div>
  </div>
{% endblock %}
